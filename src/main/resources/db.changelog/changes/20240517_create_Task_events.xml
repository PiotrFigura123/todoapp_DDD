<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">
    <changeSet id="1" author="pfigura">
        <createTable tableName="task_events">
            <column name="id" autoIncrement="true" type="BIGINT"></column>
            <column name="task_id" type="BIGINT"></column>
            <column name="occurrence"  type="TIMESTAMP WITHOUT TIME ZONE"> ></column>
            <column name="name" type="VARCHAR(30)"></column>
        </createTable>
    </changeSet>
</databaseChangeLog>